<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false" />

        <ImageView
            android:id = "@+id/heart"
            android:src = "@drawable/new_heart"
            android:layout_width = "80dp"
            android:layout_height = "80dp"
            android:layout_alignTop = "@id/recipeImage"
            android:layout_alignLeft="@id/recipeImage"
            android:padding="1dp"/>

        <TextView
            android:id = "@+id/favorites"
            android:layout_width = "60dp"
            android:layout_height = "60dp"
            android:layout_alignBaseline="@id/heart"
            android:textSize = "20dp"
            android:paddingLeft = "35dp"
            android:paddingTop = "20dp"/>


        <ImageView
            android:id="@+id/ivTransparency"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/recipeImage"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivTransparency"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:background="@color/colorAccent"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>

